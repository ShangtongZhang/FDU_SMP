<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name></display-name>
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>edu.fudan.msg.filter.EncodingFilter</filter-class>
		<init-param>
			<param-name>charset</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>AuthFilter</filter-name>
		<filter-class>edu.fudan.msg.filter.AuthorizationFilter</filter-class>
	</filter>
	<filter>
		<filter-name>AJAXExceptionFilter</filter-name>
		<filter-class>edu.fudan.msg.filter.AJAXExceptionFilter</filter-class>
	</filter>
	<filter>
		<filter-name>PageExceptionFilter</filter-name>
		<filter-class>edu.fudan.msg.filter.PageExceptionFilter</filter-class>
		<init-param>
			<param-name>errorPage</param-name>
			<param-value>/error.html</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AuthFilter</filter-name>
		<url-pattern>/ajax/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AJAXExceptionFilter</filter-name>
		<url-pattern>/ajax/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>AJAXExceptionFilter</filter-name>
		<url-pattern>/user</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PageExceptionFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>PageExceptionFilter</filter-name>
		<url-pattern>/download</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>edu.fudan.msg.servlet.UserServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>StudentServlet</servlet-name>
		<servlet-class>edu.fudan.msg.servlet.StudentServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DownServlet</servlet-name>
		<servlet-class>edu.fudan.msg.servlet.FileDownLoadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UploadServlet</servlet-name>
		<servlet-class>edu.fudan.msg.servlet.FileUploadServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>OrganizationServlet</servlet-name>
		<servlet-class>edu.fudan.msg.servlet.OrganizationServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EvaluateServlet</servlet-name>
		<servlet-class>edu.fudan.msg.servlet.EvaluateServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MailServlet</servlet-name>
		<servlet-class>edu.fudan.msg.servlet.MailServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MessageServlet</servlet-name>
		<servlet-class>edu.fudan.msg.servlet.MessageServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>StudentServlet</servlet-name>
		<url-pattern>/ajax/student</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownServlet</servlet-name>
		<url-pattern>/download</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UploadServlet</servlet-name>
		<url-pattern>/upload</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>OrganizationServlet</servlet-name>
		<url-pattern>/ajax/organization</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EvaluateServlet</servlet-name>
		<url-pattern>/ajax/evaluate</url-pattern>
	</servlet-mapping>
		<servlet-mapping>
		<servlet-name>MailServlet</servlet-name>
		<url-pattern>/mail</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MessageServlet</servlet-name>
		<url-pattern>/message</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
</web-app>
